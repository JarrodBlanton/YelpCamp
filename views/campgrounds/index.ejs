<% include ../partials/header %>


<header class="jumbotron">
    <% if (!currUser) { %>
        <h1><span class="glyphicon glyphicon-tent"></span>Welcome to YelpCamp</h1>
    <% } else { %>
        <h1><div style="{margin-top:5px;}"><span class="glyphicon glyphicon-tent"></span>Welcome to YelpCamp, <%= currUser.username %></div></h1>
    <% } %>
    <p>View hand-picked campgrounds from all over the world</p>
    <p>
        <a href='/campgrounds/new' type="button" class="btn btn-primary btn-lg">Add New Campground</a>
    </p>
</header>

<!-- Start grid -->
<div class="row text-center" style="display:flex; flex-wrap:wrap;">

    <!-- Iterate through campground array and each name and image -->
    <% campgrounds.forEach(function(campground) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div> 
        </div>
    <% }); %>

</div>

<% include ../partials/footer %>