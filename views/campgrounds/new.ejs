<% include ../partials/header %>

<div class="row">
    <!-- Have to use inline styling until I learn how to add static directory to node file -->
    <h1 style="text-align: center;">Create a New Campground</h1>
    <!-- Form for adding a new campground. -->
    <!--  TODO: add additional regex for valid entry -->
    <div style="margin: 25px auto; width: 30%">
        <form action='/campgrounds' method='POST'>
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type='text' id='name' name='name' placeholder='Name'>       
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type='number' id='price' name='price' placeholder='Price' min='0.01' step="0.01">       
            </div>
            <div class="form-group">
                <label for="img">Image</label>
                <input class="form-control" type='text' id='img' name='img' placeholder='Image Url'>         
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type='text' id='description' name='description' placeholder='Description'>       
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type='text' id='location' name='location' placeholder='Yosemite National Park, CA'>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href='/campgrounds'>Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>