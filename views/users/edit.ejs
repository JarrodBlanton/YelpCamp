<% include ../partials/header %>

<div class="row">
    <!-- Have to use inline styling until I learn how to add static directory to node file -->
    <h1 style="text-align: center;">Edit User Information</h1>
    <!-- Form for adding a new campground. -->
    <!--  TODO: add additional regex for valid entry -->
    <div style="margin: 25px auto; width: 30%">
        <!-- Method override for put -->
        
        <form action='/users/<%= user._id %>?_method=PUT' method='POST'>
            <div class="form-group">
                <!-- Use keyword "value" to put value inside of the forms -->
                <input class="form-control" type='text' name='comment[text]' value='<%= comment.text %>'>       
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div> 
        </form>
        <a href='/campgrounds'>Go Back</a>
    </div>
</div>

<% include ../partials/footer %>